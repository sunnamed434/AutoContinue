{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "webextensions": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "globals": {
    "chrome": "readonly"
  },
  "rules": {
    "prettier/prettier": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": "off",
    "no-console": "off",
    "no-undef": "error"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "coverage/"
  ]
}
